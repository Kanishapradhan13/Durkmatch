# Production Environment Configuration for DrukMatch Backend

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (PostgreSQL)
DB_USER=your_production_db_user
DB_HOST=your_production_db_host
DB_NAME=drukmatch_production
DB_PASSWORD=your_secure_production_password
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secure_random_jwt_secret_min_32_chars

# CORS Configuration (Your deployed frontend URL)
FRONTEND_URL=https://your-drukmatch-frontend.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_PHOTOS=6
MAX_PHOTO_SIZE_MB=5

# Security
BCRYPT_ROUNDS=12
